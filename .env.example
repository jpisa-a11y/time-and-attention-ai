# ──────────────────────────────────────────────────────────────────────────────
# Time & Attention AI - Environment Variables
# Copy this file to .env and fill in your values
# ──────────────────────────────────────────────────────────────────────────────

# ─── App Configuration ────────────────────────────────────────────────────────
NODE_ENV=development
PORT=3000
VITE_APP_TITLE=Time & Attention
VITE_APP_LOGO=/logo.png
VITE_APP_ID=time-and-attention-ai

# ─── Vapi (AI Voice Agent) ───────────────────────────────────────────────────
# Sign up at https://vapi.ai and get your API key from the dashboard
VAPI_API_KEY=
VAPI_PHONE_NUMBER_ID=
VAPI_SERVER_URL=https://your-domain.com/api/webhooks/vapi
VAPI_SERVER_SECRET=

# ─── Twilio (Calls, SMS, Chat) ──────────────────────────────────────────────
# Sign up at https://twilio.com and get credentials from the console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ─── Deepgram (Speech-to-Text / Text-to-Speech) ─────────────────────────────
# Sign up at https://deepgram.com and get your API key
DEEPGRAM_API_KEY=
DEEPGRAM_STT_MODEL=nova-2
DEEPGRAM_TTS_VOICE=asteria-en
DEEPGRAM_LANGUAGE=en-US

# ─── Pinecone (Knowledge Base / Vector Database) ────────────────────────────
# Sign up at https://pinecone.io and create an index
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=ai-assistant-kb
PINECONE_NAMESPACE=default

# ─── Optional: Analytics ─────────────────────────────────────────────────────
VITE_ANALYTICS_WEBSITE_ID=
VITE_ANALYTICS_ENDPOINT=

# ─── Optional: Stripe ────────────────────────────────────────────────────────
VITE_STRIPE_PUBLIC_KEY=

# ─── Optional: Google Maps ───────────────────────────────────────────────────
VITE_FRONTEND_FORGE_API_URL=
VITE_FRONTEND_FORGE_API_KEY=
